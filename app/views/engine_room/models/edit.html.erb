<p><%= link_to "Back", { :controller => 'models', :action => :index } %></p>

<h1><%= @model.human_name %></h1>

<% if @error %>
	<p style="color:red"><%= @error %></p>
<% else %>

	<%= form_for @element, :url => { :controller => "models", :action => :update } do |f| %>
		<%= render 'error_messages', :object => f.object %>
		
	 	<% @model.columns.each do |column| %>
			<div class="field">
				<%= f.label column.name, @model.human_attribute_name(column.name) %>
				<%= get_form_field_for_column(f, @element, column) %>
			</div>
		<% end %>
		
	  <div class="actions">
			<button type="submit">Submit</button>
	  </div>
	<% end %>
	
<% end %>
<div class="box">
  <h3>Content Sections</h3>
  <div class="box-content">
    <ul>
    <% @sections.each do |section| %>
      <li><%= link_to section.name.titleize, { :controller => 'content', :action => :index, :section_name => section.name }%> 
      <% unless section.view_type == 'detail' %>
        (<%= section.model_count %>)
      <% end %>
      </li>
    <% end %>
    </ul>
  </div>
</div>
